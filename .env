# .env (UTF-8)

### Storage Service Configuration ###

STORAGE_VERSION=1.0.0
STORAGE_BASE_PATH=data
STORAGE_HOST=0.0.0.0
STORAGE_PORT=8000
STORAGE_LOG_FILE=logs/storage_service.log
STORAGE_LOCK_STRIPES=1024

# HTTPX client tuning
STORAGE_CLIENT_MAX_CONNECTIONS=20
STORAGE_CLIENT_MAX_KEEPALIVE=10
STORAGE_CLIENT_REQUEST_TIMEOUT_SECONDS=5.0

### Ingestion Service Configuration ###

INGESTION_VERSION=1.0.0
INGESTION_LOG_FILE=logs/ingestion_service.log

# Document conversion settings
INGESTION_CONVERSION_OUTPUT_DIR=tmp/conversions
INGESTION_CONVERSION_DPI=200
INGESTION_CONVERSION_QUALITY=90
INGESTION_IMAGE_HEIGHT=2400
INGESTION_IMAGE_WIDTH=1700
INGESTION_MAX_FILE_SIZE_MB=50.0
INGESTION_PAGE_THRESHOLD=50

# HTTPX client tuning
INGESTION_CLIENT_MAX_CONNECTIONS=20
INGESTION_CLIENT_MAX_KEEPALIVE=10
INGESTION_CLIENT_REQUEST_TIMEOUT_SECONDS=5.0

### Database Service Configuration ###
CONFIG_PATH=config/config.yaml
DB_USER=docai_user
DB_PASS=docai_pass
DB_HOST=localhost
DB_PORT=5432
DB_NAME=docai_db

### Queue Service Configuration ###
QUEUE_VERSION=1.0.0
QUEUE_LOG_FILE=logs/queue_service.log

QUEUE_BROKER_URL=redis://localhost:6379/0
QUEUE_DEFAULT_QUEUES=["document_processing", "document_embedding", "test"]
QUEUE_PREFETCH_COUNT=10
QUEUE_VISIBILITY_TIMEOUT=300
